# ===========================================
# MediaGrab - NPM Configuration
# Otimizações de Performance
# ===========================================

# Resolver conflitos de peer dependencies automaticamente
legacy-peer-deps=true

# Desabilitar verificações desnecessárias (mais rápido)
fund=false
audit=false

# Reduzir verbosidade dos logs
loglevel=warn
progress=false

# Configurações de rede e retry
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Cache (cache-max foi removido - deprecated)
prefer-offline=false

# Performance
maxsockets=15
prefer-online=true

